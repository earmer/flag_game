{
  "model": {
    "depth": 10,
    "feature_dim": 128,
    "history_len": 3,
    "normalize_side": true
  },
  "ppo": {
    "gamma": 0.99,
    "gae_lambda": 0.95,
    "clip_ratio": 0.2,
    "value_coef": 0.5,
    "entropy_coef": 0.01,
    "learning_rate": 0.0003,
    "batch_size": 512,
    "epochs": 4,
    "rollout_steps": 512,
    "max_grad_norm": 1.0
  },
  "training": {
    "seed": 0,
    "save_every_updates": 5,
    "epsilon": 0.05,
    "reward_divide_by_players": 1.0,
    "num_envs": 4,
    "sim_threads": 4,
    "historical_opponent": {
      "use_prob": 0.35,
      "min_pool": 2,
      "max_pool": 16,
      "store_every_updates": 5,
      "seed_with_initial": true,
      "opponent_epsilon": 0.0
    },
    "eval": {
      "every_updates": 5,
      "episodes": 20
    }
  },
  "env": {
    "init_path": "../example_init.json",
    "width": 20,
    "height": 20,
    "num_players": 3,
    "num_flags": 6,
    "move_speed_ms": 300.0,
    "prison_duration_ms": 20000.0,
    "use_random_flags": true,
    "num_obstacles_1": 8,
    "num_obstacles_2": 4,
    "seed": 0,
    "max_steps": 512
  },
  "checkpoint_path": "checkpoints/latest.pt"
}
